# Kafka配置
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_VIDEO_TOPIC=video_frames
KAFKA_ALERT_TOPIC=human_alerts

# 摄像头配置
CAMERA_ID=cam001
# 0表示默认摄像头，也可以设置为视频文件路径
VIDEO_SOURCE=0
FRAME_WIDTH=640
FRAME_HEIGHT=480
FPS=10

# YOLO配置
YOLO_MODEL_PATH=models/yolov8n.pt
CONFIDENCE_THRESHOLD=0.5

# 存储配置
SAVE_DETECTED_FRAMES=true
OUTPUT_DIR=data/detected